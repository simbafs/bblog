---
type Props = {
  links: {
    text: string;
    href: string;
    external?: boolean;
  }[];
};
---

<aside class="w-full overflow-y-auto p-4 md:w-1/5">
  <div class="mb-2">$ ls $(pwd)</div>
  <ul class="space-y-1">
    {
      Astro.props.links.map((link) => (
        <li>
          <a
            class="hover:text-terminal-accent underline underline-offset-4 transition-all hover:underline-offset-1"
            href={link.href}
          >
            {link.text}
          </a>
        </li>
      ))
    }
  </ul>
</aside>
