---
type Props = {
  links: {
    text: string;
    href: string;
    external?: boolean;
  }[];
  cmd?: string;
};

const cmd = "$ " + Astro.props.cmd || "$ ls -l $(pwd)";
---

<aside class="overflow-y-auto p-4">
  <div class="mb-2">{cmd}</div>
  <ul class="space-y-1">
    {
      Astro.props.links.map((link) => (
        <li>
          <a
            class="hover:text-terminal-accent underline underline-offset-4 transition-all hover:underline-offset-1"
            href={link.href}
          >
            {link.text}
          </a>
        </li>
      ))
    }
  </ul>
</aside>
