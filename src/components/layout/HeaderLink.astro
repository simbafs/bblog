---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;
const paths = Astro.url.pathname.split("/").filter(Boolean);
const h = String(href).replaceAll("/", "");
const isActive = paths[0] === h || Astro.url.pathname === href;
---

<a
  href={href}
  class:list={[
    "hover:text-terminal-accent text-lg transition-all",
    className,
    { active: isActive },
    { "text-terminal-accent": isActive },
  ]}
  {...props}
>
  <slot />
</a>
<style>
  a {
    display: inline-block;
  }
  a.active {
    font-weight: bolder;
  }
</style>
